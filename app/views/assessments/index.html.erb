<p id="notice"><%= notice %></p>

<h1>Assessments</h1>

<table>
  <thead>
    <tr>
      <th>Test 1</th>
      <th>Test 2</th>
      <th>Test 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.test1 %></td>
        <td><%= assessment.test2 %></td>
        <td><%= assessment.test3 %></td>
        <td><%= link_to 'Show', assessment %></td>
        <% unless @grades_count > 0 %>
          <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
          <td><%= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless @assessments.any? %>
  <%= link_to 'New Assessment', new_assessment_path %>
<% end %>
